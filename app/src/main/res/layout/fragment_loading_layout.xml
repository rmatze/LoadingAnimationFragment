<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/loading_ring_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:src="@drawable/fill_1"/>


    <ImageView
        android:id="@+id/loading_ring_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:src="@drawable/fill_2"/>


    <ImageView
        android:id="@+id/loading_ring_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:src="@drawable/fill_3"/>


    <ImageView
        android:id="@+id/loading_ring_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/fill_4"/>


    <ImageView
        android:id="@+id/loading_b_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="7dp"
        android:src="@drawable/fill_5"/>

    <TextView
        android:id="@+id/loading_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loading_ring_1"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Boosting"
        android:textSize="30sp"
        android:textStyle="bold"/>

</RelativeLayout>